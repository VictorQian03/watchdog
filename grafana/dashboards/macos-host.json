{
  "uid": "macos-host",
  "title": "MacOS Host Health",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "percent"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "RAM Available (bytes)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "bytes"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_memory_free_bytes + node_memory_inactive_bytes",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Root Filesystem Free (bytes)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "bytes"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|devtmpfs|overlay|squashfs|fuse.lxcfs\"}",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 4,
      "type": "bargauge",
      "title": "Disk Free by Mountpoint (bytes)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "bytes"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (device, mountpoint) (node_filesystem_avail_bytes{fstype!~\"tmpfs|devtmpfs|overlay|squashfs|fuse.lxcfs\"})",
          "legendFormat": "{{device}} {{mountpoint}}"
        }
      ]
    },
    {
      "id": 5,
      "type": "bargauge",
      "title": "Disk Free by Mountpoint (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "fieldConfig": {
        "defaults": {"unit": "percent"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "100 * sum by (device, mountpoint) (node_filesystem_avail_bytes{fstype!~\"tmpfs|devtmpfs|overlay|squashfs|fuse.lxcfs\"}) / sum by (device, mountpoint) (node_filesystem_size_bytes{fstype!~\"tmpfs|devtmpfs|overlay|squashfs|fuse.lxcfs\"})",
          "legendFormat": "{{device}} {{mountpoint}}"
        }
      ]
    }
  ],
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  }
}
